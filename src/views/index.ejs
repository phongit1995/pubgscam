        <script src="jQueryRotate.2.3.js"></script>
        <script type="text/javascript">
            $('#button').click(function() {
                $('#bginform').hide();
            });
            
            $(document).ready(function(e) {
                
                var pl = 1;
                var play = true;
                //Click nút quay
                $('body').delegate('#play', 'click', function() {
                    if (play) {
                        vongquay(0, "alo");  
