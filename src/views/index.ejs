                        //             $('#bginform').show();
                        //         }
                        //     }
                        // });
                    }
                });

                function vongquay(deg, phanqua) {
                    play = false;
                    $('#rotate-play').stopRotate();
                    $("#rotate-play").rotate({
                        angle: 0,
                        duration: 3000,
                        animateTo: deg + 3600
                    });
                    setTimeout(function() {
                        $('#result').html(phanqua);
                        $('#bginform').show();
                        play = true;
                        pl = 0;
                    }, 2500);
                }
            });
        </script>
